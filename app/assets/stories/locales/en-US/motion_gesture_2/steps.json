           "target":{
             "path":"parts-controls",
             "part":"motion_0"
           },
           "angle":180,
           "offset":30
         },
         "validation":{
           "open-part-settings":{
             "target":"motion_0"
           }
         }
       },
       {
         "tooltips":[
           {
             "text":"Toggle this switch to choose Gesture",
